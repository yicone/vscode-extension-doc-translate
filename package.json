{
  "name": "doc-translate",
  "displayName": "Doc Translate",
  "description": "Claude APIを使用してPythonのdocstringとコメントを日本語に翻訳",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "doc-translate.clearCache",
        "title": "Doc Translate: 翻訳キャッシュをクリア"
      },
      {
        "command": "doc-translate.showLogs",
        "title": "Doc Translate: ログを表示"
      }
    ],
    "configuration": {
      "title": "Doc Translate",
      "properties": {
        "docTranslate.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Claude翻訳用のAnthropic APIキー（環境変数 ANTHROPIC_API_KEY が優先されます）"
        },
        "docTranslate.model": {
          "type": "string",
          "default": "claude-haiku-4-5-20251001",
          "description": "翻訳に使用するClaudeモデル"
        },
        "docTranslate.timeout": {
          "type": "number",
          "default": 30000,
          "description": "APIリクエストのタイムアウト（ミリ秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
