{
  "name": "doc-translate",
  "displayName": "vscode-extension-doc-translate",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "doc-translate.clearCache",
        "title": "Doc Translate: Clear Translation Cache"
      },
      {
        "command": "doc-translate.showLogs",
        "title": "Doc Translate: Show Logs"
      }
    ],
    "configuration": {
      "title": "Doc Translate",
      "properties": {
        "docTranslate.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key for Claude translation. Environment variable ANTHROPIC_API_KEY takes precedence."
        },
        "docTranslate.model": {
          "type": "string",
          "default": "claude-3-5-sonnet-20241022",
          "description": "Claude model to use for translation"
        },
        "docTranslate.timeout": {
          "type": "number",
          "default": 30000,
          "description": "API request timeout in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
