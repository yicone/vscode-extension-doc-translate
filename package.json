{
  "name": "doc-translate",
  "displayName": "Doc Translate",
  "description": "%description%",
  "version": "1.0.2",
  "publisher": "m-cube",
  "icon": "img/icon-design.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eycjur/vscode-extension-doc-translate.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "doc-translate.clearCache",
        "title": "%command.clearCache%"
      },
      {
        "command": "doc-translate.showLogs",
        "title": "%command.showLogs%"
      }
    ],
    "configuration": {
      "title": "Doc Translate",
      "properties": {
        "docTranslate.provider": {
          "type": "string",
          "enum": [
            "anthropic",
            "openai",
            "gemini"
          ],
          "default": "anthropic",
          "description": "%config.provider%"
        },
        "docTranslate.targetLang": {
          "type": "string",
          "default": "ja",
          "description": "%config.targetLang%"
        },
        "docTranslate.supportedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "python",
            "javascript",
            "typescript",
            "go"
          ],
          "description": "%config.supportedLanguages%"
        },
        "docTranslate.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "%config.anthropicApiKey%"
        },
        "docTranslate.model": {
          "type": "string",
          "default": "claude-haiku-4-5-20251001",
          "description": "%config.model%"
        },
        "docTranslate.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "%config.openaiApiKey%"
        },
        "docTranslate.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "%config.openaiModel%"
        },
        "docTranslate.openaiBaseUrl": {
          "type": "string",
          "default": "",
          "description": "%config.openaiBaseUrl%"
        },
        "docTranslate.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "%config.geminiApiKey%"
        },
        "docTranslate.geminiModel": {
          "type": "string",
          "default": "gemini-2.0-flash-exp",
          "description": "%config.geminiModel%"
        },
        "docTranslate.timeout": {
          "type": "number",
          "default": 30000,
          "description": "%config.timeout%"
        },
        "docTranslate.maxRetries": {
          "type": "number",
          "default": 3,
          "description": "%config.maxRetries%"
        },
        "docTranslate.retryInitialDelay": {
          "type": "number",
          "default": 1000,
          "description": "%config.retryInitialDelay%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "vscode:publish": "vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/generative-ai": "^0.24.1",
    "franc": "^6.2.0",
    "openai": "^6.8.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
